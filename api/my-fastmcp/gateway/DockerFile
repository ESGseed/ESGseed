FROM python:3.11-slim

WORKDIR /app

# 의존성 파일 복사 및 설치
COPY gateway/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Gateway 애플리케이션 코드 복사
COPY gateway/app/main.py .

# 서브라우터 파일들 복사 (Gateway가 import하기 위함)
COPY services/clawler_serice/app ./services/clawler_serice/app
COPY services/agent_service/app ./services/agent_service/app

# 포트 노출
EXPOSE 9000

# 애플리케이션 실행
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "9000"]

